:root {
  --main-color: #000;
  --main-bg-color: #fff;
  --sub-bg-color: #ddd;
}

header {
  background-color: var(--sub-bg-color);
  padding: 0.5em;
}

main {
  padding: 0.5em;
}

main.index article.post {
  border: thin solid var(--main-color);
  margin-bottom: 1em;
  padding: 0.5em;
}

footer {
  background-color: brown;
  padding: 0.5em;
}

hgroup.title-date > h2.title {
  display: inline;
}
hgroup.title-date > time.date {
  font-size: 1em;
  margin-left: 1em;
}

hgroup.title-subtitle > * {
  display: inline;
}
hgroup.title-subtitle > p::before {
  content: "-- ";
}

ul.header {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
      -ms-flex-direction: row;
          flex-direction: row;
  list-style-type: none;
  -webkit-box-pack: space-evenly;
      -ms-flex-pack: space-evenly;
          justify-content: space-evenly;
}

ul.tags {
  display: inline;
  margin-left: 1em;
  list-style-type: none;
}
ul.tags > li {
  display: inline;
  margin-left: 1em;
}

span.length {
  margin-left: 1em;
}

article.post > header {
  background-color: #fff;
}

fieldset.form {
  background-color: #aaa;
}
fieldset.form > legend {
  background-color: #fff;
}

form.send-message {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
      -ms-flex-direction: column;
          flex-direction: column;
}
form.send-message div.form-part {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
      -ms-flex-direction: row;
          flex-direction: row;
}
form.send-message div.form-part > label::after {
  content: ": ";
}
form.send-message div.form-part.col {
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
      -ms-flex-direction: column;
          flex-direction: column;
}
form.send-message div.submit {
  -webkit-box-orient: horizontal;
  -webkit-box-direction: reverse;
      -ms-flex-direction: row-reverse;
          flex-direction: row-reverse;
}
form.send-message div.submit > button.submit {
  border-radius: 0.4em;
  margin-top: 1em;
  width: -webkit-fit-content;
  width: -moz-fit-content;
  width: fit-content;
}

code {
  font-family: monospace;
  color: #ff0;
  background-color: #000;
}
code::before {
  border-bottom: thin solid #000;
}
code::after {
  border-top: thin solid #000;
}